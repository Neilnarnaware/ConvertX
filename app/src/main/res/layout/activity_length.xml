<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.neil_narnaware.convertx.lengthActivity"
    android:background="@color/hint_foreground_material_light">

    <RadioGroup
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:background="#92a0b1"
        android:id="@+id/radioGroup2"
        android:layout_below="@+id/txt2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="Miligram"
            android:id="@+id/radioButton3"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:text="Gram"
            android:id="@+id/radioButton"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:text="Kilogram"
            android:id="@+id/radioButton2"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:text="Ounce"
            android:id="@+id/radioButton4"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="Pound"
            android:id="@+id/radioButton5"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ton"
            android:id="@+id/radioButton6"
            android:checked="false"
            android:textSize="20dp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:background="#92a0b1"
        android:layout_below="@+id/txt2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:text="Miligram"
            android:id="@+id/radioButton7"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gram"
            android:id="@+id/radioButton8"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kilogram"
            android:id="@+id/radioButton9"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ounce"
            android:id="@+id/radioButton10"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pound"
            android:id="@+id/radioButton11"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="Ton"
            android:id="@+id/radioButton12"
            android:checked="false"
            android:textSize="20dp" />
    </RadioGroup>

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LENGTH"
        android:id="@+id/txt1"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@color/material_grey_300"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editnumber"
        android:layout_marginTop="42dp"
        android:hint="    enter number"
        android:layout_below="@+id/txt1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" From -                         To -"
        android:id="@+id/txt2"
        android:gravity="left|center"
        android:paddingRight="100dp"
        android:textSize="22dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/editnumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/optext"
        android:background="#949292"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
