<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.neil_narnaware.convertx.volumeActivity"
    android:background="@color/hint_foreground_material_light">

    <TextView
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Volume"
        android:id="@+id/txt2"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center"
        android:background="@color/material_grey_300"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="157dp"
        android:layout_height="200dp"
        android:background="#92a0b1"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/radioGroup3"
        android:layout_alignRight="@+id/fromtxt"
        android:layout_alignEnd="@+id/fromtxt"
        android:id="@+id/radioGroup4">

        <RadioButton
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="Mililiter"
            android:id="@+id/rbdmil"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:text="Liter"
            android:id="@+id/rbdlit"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:text="Cubic Foot "
            android:id="@+id/rbdcfoot"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="Cubic Inch"
            android:id="@+id/rbdcinch"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:text="Yard"
            android:id="@+id/rbdyar"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tablespoon"
            android:id="@+id/rbdspoon"
            android:checked="false"
            android:textSize="20dp" />
    </RadioGroup>

    <TextView
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" From -                         To -"
        android:id="@+id/fromtxt"
        android:gravity="left|center"
        android:paddingRight="100dp"
        android:textSize="22dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/inputxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="157dp"
        android:layout_height="200dp"
        android:layout_below="@+id/fromtxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup3"
        android:background="#92a0b1">

        <RadioButton
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:text="Mililiter"
            android:id="@+id/rbdmili"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liter"
            android:id="@+id/rbdliter"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cubic Foot"
            android:id="@+id/rbdfoot"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cubic Inch"
            android:id="@+id/rbdinch"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yard"
            android:id="@+id/rbdyard"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="Tablespoon"
            android:id="@+id/rbdtspoon"
            android:checked="false"
            android:textSize="20dp" />

    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/inputxt"
        android:hint="   enter number"
        android:layout_below="@+id/txt2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/optext"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#949292" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/btnsubmit"
        android:layout_above="@+id/optext"
        android:layout_alignRight="@+id/radioGroup4"
        android:layout_alignEnd="@+id/radioGroup4" />

</RelativeLayout>
